<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Signin</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-5">
        <div class="row justify-content-center">
          <div class="col-md-10">
            <form action="/user/signin"  method="post">
              <div class="mb-3">
                <label for="email" class="form-label fw-bold fs-4 text-primary">Email address</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="email">
              </div>
              <div class="mb-3">
                <label for="password" class="form-label fw-bold fs-4 text-primary">Password</label>
                <input type="password" id="password" name="password" class="form-control" aria-describedby="password">
                <div id="passwordHelpBlock" class="form-text">
                </div>
              </div>
              <button type="submit" class="btn btn-outline-success btn-lg">Login</button>
            </form>
          </div>
        </div>
      </div>
    <%- include('./partials/script') %>
</body>
</html>